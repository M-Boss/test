<%- include('partials/header'); -%>
<div class="container-fluid">

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Template Previews</li>
  </ol>


  <div class="card mb-3">
    <div class="card-header">
      <i class="fas fa-chart-area"></i>
      Template preview settings
    </div>
    <div class="card-body">

      <form method="post" action="/boss/template-previews/add">
        <h5>Set template user</h5>
        <div class="form-group">
          <label for="exampleInputEmail1">Template ID</label>
          <input class="form-control" name="template_id" placeholder="Template ID">
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">User ID</label>
          <input class="form-control" name="user_id" placeholder="User ID">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <br/>
      <br/>

      <form>
        <table class="table table-striped">

          <thead>
          <th>Template ID</th>
          <th>User ID</th>
          <th></th>
          </thead>
          <tbody>
          <% for(var i=users.length-1; i>=0; i--) {%>
          <tr>
            <td><%= users[i].template_id%></td>
            <td><%= users[i].user ? `(${users[i].user_id}) ` + users[i].user.email : '-'%></td>
            <td><a href="/boss/template-previews/del/<%= users[i].id%>">Delete</a></td>
          </tr>
          <% } %>
          </tbody>
        </table>
      </form>
    </div>
    <div class="card-footer small text-muted"></div>
  </div>

</div>

<%- include('partials/footer'); -%>