<%- include('partials/header'); -%>
<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Templates</li>
    </ol>

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-chart-area"></i>
            Template <%= id %>
        </div>
        <div class="card-body">
            <form method="post" action="/boss/templates/<%= id %>">
                <div class="form-group">
                    <label for="exampleInputEmail1">Template ID</label>
                    <input disabled class="form-control" name="template_id" value="<%= id%>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Preview data from user</label>
                    <select class="form-control" name="user_id" placeholder="User ID">
                        <% for(var i = 0; i < users.length; i++) { var u = users[i]; %>
                        <option <%= user_id == u.id ? 'selected' : '' %> value="<%= u.id%>"><%= u.id + " - " + u.email %></option>
                        <% } %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
        <div class="card-footer small text-muted"></div>
    </div>

</div>

<%- include('partials/footer'); -%>